<div class="author">
  <h1 class="author_heading">Hi, i am PNT.</h1>
  <p class="author_body">Web developer and content creator.</p>
</div>

<img class="hero_image" src="/img/hero-image.webp" alt="">

<section class="articles">
<h2 class="articles_heading">Lastest Posts</h2>

<ul class="article-ul">

  <% data.forEach(post => { %>
  <li>
    <a href="/detail/<%= post._id  %>">
      <span><%= post.title  %></span>
      <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
    </a>
  </li>
  <% }) %>
</ul>
<% if (nextPage!==null) { %>
  <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a> 
<% } %>
</section>